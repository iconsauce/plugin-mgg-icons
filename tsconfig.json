{
  "compilerOptions": {
    "jsx": "react",
    "lib": ["esnext"],
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "outDir": "lib",
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2017",
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "lib",
    "node_modules"
  ]
}
